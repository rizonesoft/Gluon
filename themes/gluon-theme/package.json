{
    "name": "gluon-theme",
    "version": "1.0.0",
    "description": "A modern WordPress block theme built with Tailwind CSS v4",
    "author": "Rizonesoft",
    "license": "GPL-2.0-or-later",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rizonesoft/Gluon.git"
    },
    "scripts": {
        "build:css": "tailwindcss -i assets/css/input.css -o assets/css/theme.css --minify",
        "build:blocks": "wp-scripts build assets/blocks/site-logo/index.jsx --output-path=assets/blocks-build/site-logo",
        "build": "npm run build:css && npm run build:blocks && node scripts/build-style.js",
        "watch:css": "tailwindcss -i assets/css/input.css -o assets/css/theme.css --watch",
        "watch:blocks": "wp-scripts start --webpack-src-dir=assets/blocks --output-path=assets/blocks-build",
        "watch": "npm run watch:css",
        "dev": "npm run watch"
    },
    "devDependencies": {
        "@tailwindcss/cli": "4.1.18",
        "@wordpress/scripts": "^31.3.0",
        "tailwindcss": "4.1.18"
    },
    "keywords": [
        "wordpress",
        "theme",
        "block-theme",
        "tailwindcss",
        "gluon"
    ],
    "main": "index.js",
    "dependencies": {
        "detect-libc": "^2.1.2",
        "enhanced-resolve": "^5.18.4",
        "graceful-fs": "^4.2.11",
        "is-extglob": "^2.1.1",
        "is-glob": "^4.0.3",
        "jiti": "^2.6.1",
        "lightningcss": "^1.30.2",
        "lightningcss-win32-x64-msvc": "^1.30.2",
        "magic-string": "^0.30.21",
        "mri": "^1.2.0",
        "node-addon-api": "^7.1.1",
        "picocolors": "^1.1.1",
        "picomatch": "^4.0.3",
        "source-map-js": "^1.2.1",
        "tapable": "^2.3.0"
    },
    "type": "commonjs",
    "bugs": {
        "url": "https://github.com/rizonesoft/Gluon/issues"
    },
    "homepage": "https://github.com/rizonesoft/Gluon#readme"
}