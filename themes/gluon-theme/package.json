{
    "name": "gluon-theme",
    "version": "1.0.0",
    "description": "A modern WordPress block theme built with Tailwind CSS v4",
    "author": "Rizonesoft",
    "license": "GPL-2.0-or-later",
    "repository": {
        "type": "git",
        "url": "https://github.com/rizonesoft/Gluon.git"
    },
    "scripts": {
        "build:css": "tailwindcss -i assets/css/input.css -o assets/css/theme.css --minify",
        "build": "npm run build:css && node scripts/build-style.js",
        "watch:css": "tailwindcss -i assets/css/input.css -o assets/css/theme.css --watch",
        "watch": "npm run watch:css",
        "dev": "npm run watch"
    },
    "devDependencies": {
        "tailwindcss": "4.1.18",
        "@tailwindcss/cli": "4.1.18"
    },
    "keywords": [
        "wordpress",
        "theme",
        "block-theme",
        "tailwindcss",
        "gluon"
    ]
}