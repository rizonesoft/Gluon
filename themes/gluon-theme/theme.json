{
    "$schema": "https://schemas.wp.org/wp/6.9/theme.json",
    "version": 3,
    "settings": {
        "appearanceTools": true,
        "color": {
            "custom": true,
            "customDuotone": true,
            "customGradient": true,
            "defaultDuotone": false,
            "defaultGradients": false,
            "defaultPalette": false,
            "palette": [
                {
                    "slug": "gluon-accent",
                    "color": "#088CDB",
                    "name": "Gluon Accent"
                },
                {
                    "slug": "gluon-secondary",
                    "color": "#04D98B",
                    "name": "Gluon Secondary"
                },
                {
                    "slug": "gluon-surface-light",
                    "color": "#fafafa",
                    "name": "Surface Light"
                },
                {
                    "slug": "gluon-elevated-light",
                    "color": "#f4f4f5",
                    "name": "Elevated Light"
                },
                {
                    "slug": "gluon-surface-dark",
                    "color": "#18181b",
                    "name": "Surface Dark"
                },
                {
                    "slug": "gluon-elevated-dark",
                    "color": "#27272a",
                    "name": "Elevated Dark"
                },
                {
                    "slug": "gluon-text-primary",
                    "color": "#09090b",
                    "name": "Text Primary"
                },
                {
                    "slug": "gluon-text-secondary",
                    "color": "#71717a",
                    "name": "Text Secondary"
                },
                {
                    "slug": "gluon-text-inverted",
                    "color": "#fafafa",
                    "name": "Text Inverted"
                },
                {
                    "slug": "gluon-border",
                    "color": "#e4e4e7",
                    "name": "Border"
                },
                {
                    "slug": "gluon-border-dark",
                    "color": "#3f3f46",
                    "name": "Border Dark"
                },
                {
                    "slug": "gluon-error",
                    "color": "#ef4444",
                    "name": "Error"
                },
                {
                    "slug": "gluon-warning",
                    "color": "#f59e0b",
                    "name": "Warning"
                }
            ]
        },
        "layout": {
            "contentSize": "800px",
            "wideSize": "1200px"
        },
        "spacing": {
            "padding": true,
            "margin": true,
            "blockGap": true,
            "units": [
                "px",
                "em",
                "rem",
                "vh",
                "vw",
                "%"
            ]
        },
        "typography": {
            "customFontSize": true,
            "dropCap": false,
            "fluid": true,
            "fontFamilies": [
                {
                    "fontFamily": "Inter, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
                    "slug": "gluon-sans",
                    "name": "Gluon Sans"
                },
                {
                    "fontFamily": "ui-monospace, SFMono-Regular, 'SF Mono', Menlo, Consolas, 'Liberation Mono', monospace",
                    "slug": "gluon-mono",
                    "name": "Gluon Mono"
                }
            ],
            "fontSizes": [
                {
                    "slug": "xs",
                    "size": "clamp(0.75rem, 0.7rem + 0.25vw, 0.875rem)",
                    "name": "Extra Small"
                },
                {
                    "slug": "sm",
                    "size": "clamp(0.875rem, 0.8rem + 0.375vw, 1rem)",
                    "name": "Small"
                },
                {
                    "slug": "base",
                    "size": "clamp(1rem, 0.925rem + 0.375vw, 1.125rem)",
                    "name": "Base"
                },
                {
                    "slug": "md",
                    "size": "clamp(1.125rem, 1rem + 0.625vw, 1.25rem)",
                    "name": "Medium"
                },
                {
                    "slug": "lg",
                    "size": "clamp(1.25rem, 1.1rem + 0.75vw, 1.5rem)",
                    "name": "Large"
                },
                {
                    "slug": "xl",
                    "size": "clamp(1.5rem, 1.3rem + 1vw, 1.875rem)",
                    "name": "Extra Large"
                },
                {
                    "slug": "2xl",
                    "size": "clamp(1.875rem, 1.6rem + 1.375vw, 2.25rem)",
                    "name": "2X Large"
                },
                {
                    "slug": "3xl",
                    "size": "clamp(2.25rem, 1.9rem + 1.75vw, 3rem)",
                    "name": "3X Large"
                },
                {
                    "slug": "4xl",
                    "size": "clamp(3rem, 2.5rem + 2.5vw, 4rem)",
                    "name": "4X Large"
                },
                {
                    "slug": "5xl",
                    "size": "clamp(4rem, 3.25rem + 3.75vw, 5rem)",
                    "name": "5X Large"
                }
            ]
        },
        "blocks": {
            "core/button": {
                "border": {
                    "radius": true
                }
            },
            "core/navigation": {
                "typography": {
                    "fontSizes": [],
                    "customFontSize": true
                }
            }
        },
        "useRootPaddingAwareAlignments": true
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--gluon-surface-light)",
            "text": "var(--wp--preset--color--gluon-text-primary)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--gluon-sans)",
            "fontSize": "var(--wp--preset--font-size--base)",
            "lineHeight": "1.6"
        },
        "spacing": {
            "padding": {
                "top": "0",
                "right": "var(--wp--preset--spacing--40)",
                "bottom": "0",
                "left": "var(--wp--preset--spacing--40)"
            }
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--gluon-accent)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--gluon-secondary)"
                    }
                },
                ":focus": {
                    "outline": {
                        "color": "var(--wp--preset--color--gluon-accent)",
                        "style": "solid",
                        "width": "2px",
                        "offset": "2px"
                    }
                }
            },
            "button": {
                "color": {
                    "background": "var(--wp--preset--color--gluon-accent)",
                    "text": "var(--wp--preset--color--gluon-text-inverted)"
                },
                "border": {
                    "radius": "2px"
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--gluon-secondary)"
                    }
                },
                ":focus": {
                    "outline": {
                        "color": "var(--wp--preset--color--gluon-accent)",
                        "style": "solid",
                        "width": "2px",
                        "offset": "2px"
                    }
                }
            },
            "heading": {
                "typography": {
                    "fontWeight": "600",
                    "lineHeight": "1.25"
                },
                "color": {
                    "text": "var(--wp--preset--color--gluon-text-primary)"
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--4xl)"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--3xl)"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--2xl)"
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--xl)"
                }
            },
            "h5": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--lg)"
                }
            },
            "h6": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--md)"
                }
            }
        },
        "blocks": {
            "core/site-title": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--xl)",
                    "fontWeight": "700"
                },
                "elements": {
                    "link": {
                        "color": {
                            "text": "var(--wp--preset--color--gluon-text-primary)"
                        },
                        ":hover": {
                            "color": {
                                "text": "var(--wp--preset--color--gluon-accent)"
                            }
                        }
                    }
                }
            },
            "core/navigation": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--sm)"
                },
                "elements": {
                    "link": {
                        "color": {
                            "text": "var(--wp--preset--color--gluon-text-primary)"
                        },
                        ":hover": {
                            "color": {
                                "text": "var(--wp--preset--color--gluon-accent)"
                            }
                        }
                    }
                }
            },
            "core/post-title": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--3xl)"
                }
            },
            "core/code": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--gluon-mono)",
                    "fontSize": "var(--wp--preset--font-size--sm)"
                },
                "color": {
                    "background": "var(--wp--preset--color--gluon-elevated-light)",
                    "text": "var(--wp--preset--color--gluon-text-primary)"
                },
                "border": {
                    "radius": "2px"
                },
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--30)",
                        "right": "var(--wp--preset--spacing--40)",
                        "bottom": "var(--wp--preset--spacing--30)",
                        "left": "var(--wp--preset--spacing--40)"
                    }
                }
            }
        }
    },
    "templateParts": [
        {
            "name": "header",
            "title": "Header",
            "area": "header"
        },
        {
            "name": "header-centered",
            "title": "Header (Centered)",
            "area": "header"
        },
        {
            "name": "header-minimal",
            "title": "Header (Minimal)",
            "area": "header"
        },
        {
            "name": "header-cta",
            "title": "Header (With CTA)",
            "area": "header"
        },
        {
            "name": "header-transparent",
            "title": "Header (Transparent)",
            "area": "header"
        },
        {
            "name": "footer",
            "title": "Footer",
            "area": "footer"
        },
        {
            "name": "footer-minimal",
            "title": "Footer (Minimal)",
            "area": "footer"
        },
        {
            "name": "sidebar",
            "title": "Sidebar",
            "area": "uncategorized"
        }
    ],
    "customTemplates": [
        {
            "name": "blank-canvas",
            "title": "Blank Canvas",
            "postTypes": [
                "page",
                "post"
            ]
        },
        {
            "name": "page-no-sidebar",
            "title": "Page (No Sidebar)",
            "postTypes": [
                "page"
            ]
        }
    ]
}